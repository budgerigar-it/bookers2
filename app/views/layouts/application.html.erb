<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <script src="https://kit.fontawesome.com/91b9ad3214.js" crossorigin="anonymous"></script>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-dark bg-dark navbar-expand-md">
        <%= link_to 'Bookers', root_path, class: "navbar-brand" %>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav ml-auto">
            <% if user_signed_in? %>
              <li class="nav-item"><%= link_to user_path(current_user), class: "nav-link text-light" do %><i class="fa-solid fa-house"></i> Home<% end %></li>
              <li class="nav-item"><%= link_to users_path, class: "nav-link text-light" do %><i class="fa-solid fa-users"></i> Users<% end %></li>
              <li class="nav-item"><%= link_to books_path, class: "nav-link text-light" do %><i class="fa-solid fa-book-open"></i> Books<% end %></li>
              <li class="nav-item"><%= link_to destroy_user_session_path, method: :delete, class: "nav-link text-light" do %><i class="fa-solid fa-right-from-bracket"></i> Log out<% end %></li>
            <% else %>
              <li class="nav-item"><%= link_to root_path, class: "nav-link text-light" do %><i class="fa-solid fa-house"></i> Home<% end %></li>
              <li class="nav-item"><%= link_to about_path, class: "nav-link text-light" do %><i class="fa-solid fa-link"></i> About<% end %></li>
              <li class="nav-item"><%= link_to new_user_registration_path, class: "nav-link text-light" do %><i class="fa-solid fa-user-plus"></i> Sign up<% end %></li>
              <li class="nav-item"><%= link_to new_user_session_path, class: "nav-link text-light" do %><i class="fa-solid fa-right-to-bracket"></i> Log in<% end %></li>
            <% end %>
          </ul>
        </div>
      </nav>
    </header>

    <div class="flash-messages">
      <% flash.each do |key, message| %>
        <% if key == "notice" %>
          <div class="alert alert-success text-center">
            <%= message %>
          </div>
        <% elsif key == "alert" %>
          <div class="alert alert-danger text-center">
            <%= message %>
          </div>
        <% end %>
      <% end %>
    </div>

    <div class="container-fluid p-4">
      <%= yield %>
    </div>
  </body>

  <footer class="text-center p-4">
    <p>CopyRight Infratop.inc</p>
  </footer>
</html>
