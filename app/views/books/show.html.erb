<div class='container'>
  <div class='row'>
    <%= render 'layouts/sidebar', user: @user, book: @book_new %>
    <div class='offset-md-1'>
    </div>
    <div class='col-md-8'>
      <h2>Book detail</h2>
      <table class='table'>
        <tr>
          <td><%= link_to user_path(@book.user) do %><%= image_tag @book.user.profile_image %><%= @book.user.name %><% end %></td>
          <td><%= link_to book_path(@book) do %><%= @book.title %><% end %></td>
          <td><%= @book.body %></td>
          <% if @book.user_id == current_user.id %>
            <td><%= link_to 'Edit', edit_book_path(@book) %></td>
            <td><%= link_to 'Destroy', book_path(@book), method: :delete, data: { confirm: '本当に消しますか？' } %></td>
          <% end %>
        </tr>
      </table>
    </div>
  </div>
</div>
