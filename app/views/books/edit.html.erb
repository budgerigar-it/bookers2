<h1>Editing Book</h1>

<% if @book.errors.any? %>
  <div id="error_explanation" class="alert alert-danger">
    <h2><%= pluralize(@book.errors.count, "error") %> prohibited this obj from being saved:</h2>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: @book do |f| %>
  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :body, "Opinion" %><br>
    <%= f.text_area :body %>
  </div>
  <div class="actions">
    <%= f.submit "Update Book", class: "btn btn-success my-3" %>
  </div>
<% end %>

<%= link_to 'Show', book_path(@book) %>
