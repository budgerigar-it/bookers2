<div class='container'>
  <div class='row'>
    <%= render 'layouts/sidebar', user: @user, book: @book %>
    <div class='offset-md-1'></div>
    <div class='col-md-8'>
      <h2>Books</h2>
      <table class='table table-hover'>
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td><%= image_tag @user.get_profile_image(80, 80) %></td>
              <td><%= link_to book.title, book_path(book) %></td>
              <td><%= book.body %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
